# =============================================================================
# MF ADVISOR - PHASE 4 ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# LLM PROVIDER CONFIGURATION
# -----------------------------------------------------------------------------
# Choose one: claude, openai, or gemini
LLM_PROVIDER=openai

# API Keys (only add the one you're using)
# Get Claude key: https://console.anthropic.com/

# Get OpenAI key: https://platform.openai.com/api-keys

# Get Google key: https://makersuite.google.com/app/apikey

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Your existing PostgreSQL database
DATABASE_URL=postgresql://user:password@localhost:5432/mfadvisor

# -----------------------------------------------------------------------------
# VECTOR DATABASE
# -----------------------------------------------------------------------------
# Path where ChromaDB will store fund document vectors
CHROMA_DB_PATH=./data/vectors

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000
DEBUG=true
